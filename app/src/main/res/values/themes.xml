<resources>
    <!-- Base application theme. -->
    <style name="Theme.CryptoHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/fui_transparent</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.CryptoHub</item>
        <item name="android:statusBarColor">@color/fui_transparent</item>
        <item name="android:navigationBarColor">@color/yellow</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
</resources>